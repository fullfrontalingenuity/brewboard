  <body>
    <div id="header"><center><img src="/images/logo.png" alt="Cheboygan Brewing Company" height="122" width="371"></center></div>
    <div id="content">

<% counter = 0 %>
<% @brews.each do | brew | %>
  <% if brew.ontap > 0 %>
    <% if counter >= 4 %>
      <% counter = 0 %>
    <% end %>
    <% counter = counter + 1  %>
      <div id="col<%= counter %>">
        <div id="item">
          <p class="brew_swatch" style="background-color: <%= brew.color %>"><span class="name"><%= brew.name %></span><span class="info">
            <span class="info-abv-label">ABV</span>
            <span class="info-ibu-label">IBU</span>
            <span class="info-price-glass-label">Glass</span>
            <span class="info-price-growler-label">Growler</span>
            <span class="info-abv"><%= brew.abv %></span>
            <span class="info-ibu"><%= brew.ibu %></span>
            <span class="info-price-glass"><%= brew.glass %></span>
            <span class="info-price-growler"><%= brew.growler %></span>
          </span></p>
          <div class="<%= brew.category %>"><a href="#"><%= brew.category %></a></div>
    <% if brew.soldout > 0 %>
          <div class="soldout"><img width="157" height="77" src="/images/soldout.png" alt="soldout"></div>
    <% else %>
          <div class="soldout"><img width="157" height="77" src="/images/transparent.png" alt="in-stock"></div>
    <% end %>
    <% if brew.medals > 0 %>
          <div class="awards">
      <% for i in (1..8) %>
        <% if i <= brew.medals %>
            <img width="25" height="33" src="/images/medal.png" alt="award">
        <% end %>
      <% end %>
          </div>
    <% end %>
        </div>
      </div>
  <% end %>
<% end %>

    </div>
    <div id="footer"><br>&nbsp;<br><center><h1>Absolutely Pure and Well Brewed</h1></center></div>

